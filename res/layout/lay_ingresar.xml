<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reparacion NÂ°: "
            android:textSize="18dp"
             android:layout_weight="1"
              android:layout_margin="5dp" />

        <TextView
            android:id="@+id/txtV_Reparacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textSize="18dp"
             android:layout_weight="1"
              android:layout_margin="5dp"
            android:text="fffff" />

    </LinearLayout>

    <LinearLayout
         android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha Ingreso: "
             android:layout_weight="1"
              android:layout_margin="5dp"
               android:textSize="18dp" />

        <TextView
            android:id="@+id/txtV_Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jjjjj"
             android:layout_weight="1"
              android:layout_margin="5dp" 
               android:textSize="18dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txtV_posicion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Serial:" 
             android:layout_weight="1"
              android:layout_margin="5dp"
               android:textSize="18dp"
              />

        <EditText
            android:id="@+id/eTxt_Serial_ingresar"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Numero de Serie"
             android:layout_weight="1"
              android:layout_margin="5dp"
            android:inputType="number" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtV_Reparaciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                 android:layout_weight="1"
                 android:layout_margin="5dp"
                  android:textSize="18dp"
                android:text="Modelo" />

            <Spinner
                android:id="@+id/spin_modelos"
                android:layout_width="89dp"
                 android:layout_weight="1"
                  android:layout_gravity="center"
            android:layout_margin="5dp"
                android:layout_height="wrap_content" />
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Version"
                 android:layout_weight="1"
                  android:layout_gravity="center"
                   android:textSize="18dp"
            android:layout_margin="5dp" />

            <Spinner
                android:id="@+id/spin_versiones"
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:layout_weight="1"
            android:layout_margin="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.50"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtV_Fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Falla" 
                 android:layout_weight="1"
                  android:layout_gravity="center"
                   android:textSize="18dp"
            android:layout_margin="5dp"/>

            <Spinner
                android:id="@+id/spin_fallas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                 android:layout_weight="1"
                  android:layout_gravity="center"
            android:layout_margin="5dp"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txtV_observaciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Observaciones" />

        <EditText
            android:id="@+id/etxt_observaciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textMultiLine" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_IngresarReparacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boton_selector"
        android:text="Ingresar" />
      
        </LinearLayout>
    
    

