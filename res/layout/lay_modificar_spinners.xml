<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:padding="5dp"
    android:background="@drawable/gris_degrade_blanco"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_gravity="center" 
         >

        <TextView
            android:id="@+id/txtV_Serial"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:text="Modelos"
            android:textSize="20sp"
                android:layout_weight="1"
                  android:layout_gravity="center" 
            android:textStyle="bold" />

        <EditText
            android:id="@+id/eTxt_Modelos"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.38"
            android:background="@drawable/fondo_edit_text"
            android:ems="10"
            android:gravity="center" >
 
            <requestFocus />
        </EditText>

        <Spinner
            android:id="@+id/spin_modelos_REP"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/fondo_spinner"
             android:layout_margin="3dp"
            android:gravity="right" />

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
        android:layout_height="wrap_content" 
         android:layout_gravity="center" >

        <Button
            android:id="@+id/btn_Insertar_lay_modelos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
          	android:layout_weight="1"
          	android:layout_margin="3dp"
            android:background="@drawable/boton_selector"
            
            android:text="Insertar" />

        <Button
            android:id="@+id/btn_Eliminar_lay_modelos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_selector"
         
            android:text="Eliminar"
            android:layout_weight="1"
              android:layout_margin="3dp"
            android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_gravity="center"  >

        <TextView
            android:id="@+id/TextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fallas"
            android:layout_gravity="center"
                android:layout_weight="1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/eTxt_Fallas"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/fondo_edit_text"
            android:ems="10"
            android:gravity="center" />

        <Spinner
            android:id="@+id/spin_fallas_REP"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
             android:layout_margin="3dp"
            android:background="@drawable/fondo_spinner"
            android:gravity="right" />

    </LinearLayout>

    <LinearLayout
       android:layout_width="match_parent"
        android:layout_height="wrap_content" 
         android:layout_gravity="center" >

        <Button
            android:id="@+id/btn_Insertar_lay_fallas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
             android:layout_weight="1"
              android:layout_margin="3dp"
            android:background="@drawable/boton_selector"
            android:text="Insertar" />

        <Button
            android:id="@+id/btn_Eliminar_lay_fallas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
             android:layout_weight="1"
              android:layout_margin="3dp"
            android:background="@drawable/boton_selector"
            android:text="Eliminar" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_gravity="center"  >

        <TextView
            android:id="@+id/TextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.09"
            android:text="Versiones"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/eTxt_Versiones"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.67"
            android:background="@drawable/fondo_edit_text"
            android:ems="10"
            android:gravity="center" />

        <Spinner
            android:id="@+id/spin_versiones_REP"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.04"
             android:layout_margin="3dp"
            android:background="@drawable/fondo_spinner"
            android:gravity="right" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
         android:layout_gravity="center" >

        <Button
            android:id="@+id/btn_Insertar_lay_versiones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
             android:layout_weight="1"
              android:layout_margin="3dp"
            android:background="@drawable/boton_selector"
            android:text="Insertar" />

        <Button
            android:id="@+id/btn_Eliminar_lay_versiones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
             android:layout_weight="1"
              android:layout_margin="3dp"
            android:background="@drawable/boton_selector"
            android:text="Eliminar" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Componentes"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/eTxt_Componentes"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/fondo_edit_text"
            android:ems="10"
            android:gravity="center" />

        <Spinner
            android:id="@+id/spin_componentes_ingresar"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
             android:layout_gravity="center"
              android:layout_margin="3dp"
            android:background="@drawable/fondo_spinner"
            android:gravity="right" />

    </LinearLayout>

    <LinearLayout
         android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_gravity="center"  >

        <Button
            android:id="@+id/btn_Insertar_componentes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
             android:layout_weight="1"
              android:layout_margin="3dp"
            android:background="@drawable/boton_selector"
            android:text="Insertar" />

        <Button
            android:id="@+id/btn_Eliminar_componentes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
             android:layout_weight="1"
              android:layout_margin="3dp"
            android:background="@drawable/boton_selector"
            android:text="Eliminar" />

    </LinearLayout>


</LinearLayout>
